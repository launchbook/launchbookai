{% extends "base.njk" %}

{% block title %}👑 Admin Dashboard – LaunchBook AI{% endblock %}

{% block content %}
<section class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">👑 Admin Dashboard</h1>

  <!-- 📊 Top Metrics Summary -->
  <div id="admin-metrics" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
    <!-- Filled dynamically -->
  </div>

  <!-- 🧭 Navigation Tabs -->
  <div class="flex space-x-4 border-b mb-6 overflow-x-auto">
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="users">👥 Users</button>
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="ebooks">📚 eBooks</button>
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="covers">🎨 Covers</button>
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="credits">💳 Credits</button>
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="logs">📜 Logs</button>
    <button class="admin-tab-btn py-2 px-4 font-medium border-b-2 border-transparent" data-tab="settings">⚙️ Settings</button>
  </div>

  <!-- 🔍 Search Bar -->
  <div id="admin-search-area" class="mb-4">
    <!-- Optional: inject filters dynamically based on active tab -->
  </div>

  <!-- 📋 Active Tab Content -->
  <div id="admin-tab-content">
    <!-- Populated via JS modules -->
  </div>
</section>
{% endblock %}

{% block scripts %}
<script type="module" src="/src/admin/admin.js"></script>
<script type="module" src="/src/admin/admin-users.js"></script>
<script type="module" src="/src/admin/admin-ebooks.js"></script>
<script type="module" src="/src/admin/admin-covers.js"></script>
<script type="module" src="/src/admin/admin-credits.js"></script>
<script type="module" src="/src/admin/admin-logs.js"></script>
<script type="module" src="/src/admin/admin-metrics.js"></script>
<script type="module" src="/src/admin/admin-settings.js"></script>
{% endblock %}

