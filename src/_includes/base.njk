      <div class="hidden md:flex items-center space-x-4" id="nav-user" style="display:none;">
        <span id="user-name" class="text-gray-700 font-medium">üë§ Welcome, Ashish</span>
        <a href="/dashboard" class="text-gray-700 hover:underline">Dashboard</a>
        <button onclick="signOut()" class="text-red-600 hover:underline">Sign Out</button>
