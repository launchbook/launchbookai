{% extends "base.njk" %}

{% block content %}
<section class="min-h-screen flex items-center justify-center bg-[#f9fafb] px-4">
  <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-[#1e40af] mb-6">Create Your Account</h1>

    <form id="signup-form" class="space-y-5">
      <div>
        <label for="signup-fullname" class="block mb-1 text-sm font-medium text-gray-700">Full Name</label>
        <input type="text" id="signup-fullname" required
      class="w-full px-4 py-2 border border-gray-300 text-gray-900 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none">
      </div>

      <div>
        <label for="signup-email" class="block mb-1 text-sm font-medium text-gray-700">Email</label>
        <input type="email" id="signup-email" required
       class="w-full px-4 py-2 border border-gray-300 text-gray-900 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none">
      </div>

      <div>
        <label for="signup-password" class="block mb-1 text-sm font-medium text-gray-700">Password</label>
        <div class="relative">
          <input type="password" id="signup-password" required
        class="w-full px-4 py-2 border border-gray-300 text-gray-900 rounded-lg pr-10 focus:ring focus:ring-blue-200 focus:outline-none">

          <button type="button" class="toggle-password absolute inset-y-0 right-3 flex items-center" aria-label="Toggle Password">
            <!-- Eye -->
            <svg xmlns="http://www.w3.org/2000/svg" class="eye-icon h-5 w-5 text-gray-500" fill="none"
              viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M2.458 12C3.732 7.943 7.522 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.478 0-8.268-2.943-9.542-7z" />
            </svg>
            <!-- Eye Off -->
            <svg xmlns="http://www.w3.org/2000/svg" class="eye-off-icon hidden h-5 w-5 text-gray-500" fill="none"
              viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a10.044 10.044 0 012.362-3.568M6.637 6.637A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.956 9.956 0 01-4.132 4.878M15 12a3 3 0 11-6 0 3 3 0 016 0zM3 3l18 18" />
            </svg>
          </button>
        </div>
        <div class="text-right mt-1">
          <a href="/forgot-password" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
        </div>
      </div>

      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-200">
        Create Account
      </button>
    </form>

    <div class="my-6 text-center text-sm text-gray-500">or</div>

    <button id="google-signup"
      class="w-full flex items-center justify-center gap-2 bg-white border border-gray-300 hover:border-gray-500 text-gray-700 font-medium py-2 rounded-lg transition">
      <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="h-5 w-5" alt="Google" />
      Sign up with Google
    </button>

    <p class="mt-6 text-center text-sm text-gray-600">
      Already have an account?
      <a href="/signin" class="text-blue-600 hover:underline">Sign In</a>
    </p>
  </div>
<div id="toast-container" class="fixed top-5 right-5 z-50 space-y-2"></div>
</section>
{% endblock %}

{% block scripts %}
<script src="/frontend/auth.js"></script>
{% endblock %}
