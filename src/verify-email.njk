{% extends "base.njk" %}

{% block content %}
<section class="min-h-screen flex items-center justify-center bg-[#f9fafb] px-4">
  <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md text-center">
    <h1 class="text-2xl font-bold text-[#1e40af] mb-4">ğŸ“§ Verify Your Email</h1>
    <p class="text-gray-600 mb-6">
      We've sent a confirmation link to your inbox.<br>
      Please verify your email to continue.
    </p>
    <button id="resend-email" class="bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700">
      ğŸ” Resend Verification Email
    </button>
    <p id="resend-status" class="text-sm text-gray-500 mt-3 hidden">ğŸ”„ Sending...</p>
  </div>
</section>
{% endblock %}

{% block scripts %}
<script src="/frontend/auth.js"></script>
<script>
  window.addEventListener("DOMContentLoaded", async () => {
    const resendBtn = document.getElementById("resend-email");
    const status = document.getElementById("resend-status");

    resendBtn.addEventListener("click", async () => {
      status.classList.remove("hidden");
      resendBtn.disabled = true;
      status.textContent = "ğŸ”„ Sending...";

      const { error } = await window.supabase.auth.resend();
      if (error) {
        status.textContent = "âŒ " + error.message;
      } else {
        status.textContent = "âœ… Email sent again!";
      }

      setTimeout(() => {
        resendBtn.disabled = false;
      }, 2000);
    });

    // â³ Poll every 30 seconds to check if verified
    setInterval(async () => {
      const { data: { user } } = await window.supabase.auth.getUser();
      if (user?.email_confirmed_at) {
        localStorage.setItem("toastMessage", "âœ… Email verified! Welcome back.");
        localStorage.setItem("toastType", "success");
        window.location.href = "/dashboard";
      }
    }, 30000);
  });
</script>
{% endblock %}
