{% extends "base.njk" %}

{% block content %}
<section class="min-h-screen flex items-center justify-center bg-[#f9fafb] px-4">
  <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-[#1e40af] mb-6">üîë Magic Link Login</h1>

    <form id="magic-login-form" class="space-y-5">
      <div>
        <label class="block mb-1 text-sm font-medium text-gray-700">Email</label>
        <input type="email" id="magic-email" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none">
      </div>

      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition">Send Magic Link</button>
    </form>

    <p class="mt-6 text-center text-sm text-gray-600">
      Want to use password instead?
      <a href="/signin" class="text-blue-600 hover:underline">Sign In</a>
    </p>
  </div>
</section>
{% endblock %}

{% block scripts %}
<script>
  const form = document.getElementById("magic-login-form");
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const email = document.getElementById("magic-email").value;
    const btn = form.querySelector("button");
    btn.disabled = true;
    btn.textContent = "Sending...";

    const { createClient } = supabase;
    const client = createClient("https://wgvquzflchtmgdgwugrq.supabase.co", "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...");

    const { error } = await client.auth.signInWithOtp({ email });
    if (error) {
      alert("‚ùå " + error.message);
      btn.disabled = false;
      btn.textContent = "Send Magic Link";
      return;
    }

    alert("‚úÖ Magic link sent. Check your email!");
    btn.textContent = "Sent!";
  });
</script>
{% endblock %}
